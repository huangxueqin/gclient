<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlideTabLayout">
        <attr name="tab_gravity">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="center" value="3" />
        </attr>

        <attr name="tab_mode">
            <enum name="fit_width" value="1" />
            <enum name="fit_parent" value="2" />
            <enum name="fix_width" value="3" />
        </attr>

        <attr name="tab_style">
            <enum name="plain_text" value="1" />
            <enum name="plain_icon" value="2" />
            <enum name="icon_text" value="3" />
            <enum name="custom" value="4" />
        </attr>

        <attr name="tab_width" format="dimension" />
        <attr name="tab_title_color" format="color" />
        <attr name="tab_title_size" format="dimension" />
        <attr name="tab_indicator_color" format="color" />
        <attr name="tab_indicator_size" format="dimension" />
        <attr name="tab_indicator_width" format="dimension" />
        <attr name="tab_indicator_height" format="dimension" />
        <attr name="tab_indicator_bottom" format="dimension" />
        <attr name="tab_indicator_style">
            <enum name="line_fix_width" value="1" />
            <enum name="line_fit_content" value="2" />
            <enum name="line_fill_parent" value="3" />
        </attr>
    </declare-styleable>
</resources>